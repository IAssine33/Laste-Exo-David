{% extends 'base.html.twig' %}

{% block body %}

    <main>
        <section>
            <article  class="bloc_articleSolo">
                <h2>categorie : {{ category.title }}</h2>
                {% for article in category.articles %}
                    <p>{{ article.title }}</p>
                    <div class="img_article"><img src="{{ article.image }}" alt="{{ article.title }}"></div>
                    <p>{{ article.description }}</p>
                {% endfor %}


            </article>
        </section>
    </main>

{% endblock %}