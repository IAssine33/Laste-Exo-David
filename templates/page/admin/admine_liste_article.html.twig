{% extends 'page/admin/baseAdmin.html.twig' %}

{% block body %}
    <main>
        <section>
            <h1> Articles :</h1>
            <article>
                <table border="1" width="100%">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Image</th>
                            <th>Catégories</th>
                            <th>Date de creation</th>
                            <th>?Publier</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                {% for article in articles %}

                    <tbody>
                        <tr>
                            <td>{{ article.title }}</td>
                            <td>
                                <div class="img_article">
                                    <img src="{{ article.image }}" alt=" {{ article.title }}">
                                </div>
                            </td>
                            <td>{{ article.category.title }}</td>
                            <td> {{ article.createdAt | date("m-d-Y") }}</td>
                            <td>
                                {% if( article.published ) %}
                                    <p>Oui</p>
                                {% else %}
                                    <p>Non</p>
                                 {% endif%}
                            </td>
                            <td>
                                <button><a href="{{ path('admin_article_delete', {idArticle: article.id}) }}">Supprimer</a></button>
                                {# <button><a href="{{ path("update_article", {id: pokemon.id}) }}">Modifier</a></button> #}
                            </td>
                        </tr>
                    </tbody>

                            {#<h3>Date de mise à jour : {{ article.updatedAt | date("m-d-Y") }}</h3>#}

                {% endfor %}
                </table>

            </article>
        </section>
    </main>
{% endblock %}